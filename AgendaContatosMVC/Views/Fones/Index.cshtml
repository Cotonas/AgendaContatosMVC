@model IEnumerable<AgendaContatosMVC.Models.Fone>

@{
    ViewData["Title"] = "Index";
}

<h2>Telefone de Contato</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(Model => Model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.ContactId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhe</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>