@model AgendaContatosMVC.Models.ViewModel.ContactFormViewModel

@{
    ViewData["Title"] = "Editar Número de Contato";
}

<h2>@ViewData["Title"]</h2>


<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Fone.Id" />
            <div class="form-group">
                <label asp-for="Fone.Telefone" class="control-label"></label>
                <input asp-for="Fone.Telefone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Fone.Celular" class="control-label"></label>
                <input asp-for="Fone.Celular" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Fone.ContactId" class="control-label"></label>
                <input asp-for="Fone.ContactId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Fone.ContactId" class="control-label"></label>
                <select asp-for="Fone.ContactId" asp-items="@(new SelectList(Model.Contacts,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a Lista</a>
</div>